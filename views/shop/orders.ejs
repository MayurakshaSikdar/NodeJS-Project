<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1 class="order-id">Order - # <%= order._id %>&Tab; &brvbar; &Tab;<a href="/orders/<%= order._id %>">Invoice</a></h1>
                            <ul class="orders__products">
                                <% let totalPrice = 0 %>
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)</li>
                                    <% totalPrice = totalPrice + Number(p.product.price) %>
                                <% }); %>
                            </ul>
                            <h3 class="order__price">Total Amount = $<%= totalPrice.toFixed(2) %></h3>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>